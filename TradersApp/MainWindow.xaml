<Window x:Class="TradersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradersApp"
        mc:Ignorable="d"
        Title="Northwind Traders"
        MinHeight="230"
        MinWidth="320"
        Height="300"
        Width="400"
        Icon="nwicon.ico">
    <Grid>
        <Image x:Name="nwlogo_jpg" Source="nwlogo.jpg" Stretch="None" />
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="75" Margin="0,0,10,10.5" Click="btnExit_Click"/>

    </Grid>
</Window>
